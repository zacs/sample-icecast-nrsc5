<ezstream>

  <servers>
    <server>
      <hostname>yourDockerHostIPAddress</hostname>
      <password>yourSourcePasswordHere</password>
    </server>
  </servers>

  <streams>
    <stream>
      <mountpoint>/your_radio_station_desired_endpoint</mountpoint>
      <format>MP3</format>
      <stream_name>KEXP_or_whatever_stations_name</stream_name>
      <stream_channels>2</stream_channels>
    </stream>
  </streams>

  <intakes>
    <intake>
      <type>stdin</type>
      <stream_once>Yes</stream_once>
    </intake>
  </intakes>

</ezstream>